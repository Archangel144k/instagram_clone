<div class="max-w-5xl mx-auto mt-12 p-8 bg-gray-900 rounded-2xl shadow-2xl border border-gray-800">
  <h1 class="font-extrabold text-4xl text-teal-400 mb-6 flex items-center gap-2">
    <i class="fas fa-compass"></i>
    Explore Posts
  </h1>
  <p class="text-gray-300 mb-8">Discover trending and new posts from the BahamaGram community.</p>

  <% if @posts.present? %>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <% @posts.each do |post| %>
        <div class="bg-gray-800 rounded-xl overflow-hidden shadow hover:shadow-lg transition-shadow duration-200">
          <% if post.image.attached? %>
            <%= link_to image_tag(url_for(post.image), class: "w-full h-56 object-cover hover:opacity-90 transition"), post_path(post) %>
          <% end %>
          <div class="p-4">
            <h2 class="font-semibold text-lg text-white truncate"><%= post.title %></h2>
            <p class="text-gray-400 text-sm mt-1 truncate"><%= truncate(post.caption, length: 80) %></p>
            <div class="flex items-center justify-between mt-4">
              <%= link_to "View", post_path(post), class: "text-teal-400 hover:underline" %>
              <span class="text-xs text-gray-500"><i class="fas fa-clock mr-1"></i><%= time_ago_in_words(post.created_at) %> ago</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <i class="fas fa-inbox text-5xl text-gray-700 mb-4"></i>
      <p class="text-gray-400 text-lg">No posts to explore yet. Check back soon!</p>
    </div>
  <% end %>
</div>
