<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 bg-black">
  <div class="max-w-md w-full space-y-8">
    <%# Logo and Heading %>
    <div class="text-center">
      <h1 class="text-4xl font-bold text-teal-400 mb-2">BahamaGram</h1>
      <h2 class="text-xl text-gray-300 font-light">Welcome back</h2>
    </div>
    
    <%# Form Card %>
    <div class="bg-gray-900 shadow-lg rounded-xl p-8 border border-gray-800">
      <h3 class="text-2xl font-semibold text-white text-center mb-6">Sign in</h3>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification message: f.object.errors.full_messages.to_sentence, class: "p-3 bg-red-900/50 text-red-200 rounded-lg mb-4 text-sm" if f.object.errors.any? %>

        <div class="space-y-5">
          <%# Email field with icon %>
          <div class="relative">
            <%= f.input :email,
              required: true,
              autofocus: true,
              placeholder: "Your email address",
              input_html: { 
                autocomplete: "email",
                class: "pl-10 w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
              },
              label_html: { class: "block text-sm font-medium text-gray-300 mb-1" } %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400 mt-6">
              <i class="fas fa-envelope"></i>
            </div>
          </div>
          
          <%# Password field with icon %>
          <div class="relative">
            <%= f.input :password,
              required: true,
              placeholder: "Your password",
              input_html: { 
                autocomplete: "current-password", 
                class: "pl-10 w-full px-4 py-3 bg-gray-800 border border-gray-700 text-white rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 focus:border-transparent"
              },
              label_html: { class: "block text-sm font-medium text-gray-300 mb-1" } %>
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none text-gray-400 mt-6">
              <i class="fas fa-lock"></i>
            </div>
          </div>
          
          <%# Remember me checkbox %>
          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <%= f.input :remember_me, 
                as: :boolean, 
                inline_label: 'Remember me', 
                label: false,
                input_html: { class: "h-4 w-4 text-teal-500 focus:ring-teal-400 bg-gray-800 border-gray-600 rounded" },
                wrapper_html: { class: "flex items-center" } %>
              <span class="ml-2 text-sm text-gray-300">Remember me</span>
            </div>
            <div class="text-sm">
              <%= link_to "Forgot password?", new_password_path(resource_name), class: "font-medium text-teal-400 hover:text-teal-300 transition-colors" %>
            </div>
          </div>
        </div>

        <%# Sign in button %>
        <div class="mt-6">
          <%= f.button :button, type: :submit, class: "w-full py-3 px-4 border border-transparent text-sm font-semibold rounded-lg text-white bg-gradient-to-r from-teal-500 to-teal-600 hover:from-teal-600 hover:to-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-900 focus:ring-teal-500 transition-colors duration-300" do %>
            <div class="flex items-center justify-center">
              <i class="fas fa-sign-in-alt mr-2"></i>
              <span>Sign in</span>
            </div>
          <% end %>
        </div>
      <% end %>

      <%# Social Sign In Options %>
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-700"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-3 bg-gray-900 text-gray-400">Or continue with</span>
          </div>
        </div>

        <div class="mt-6 grid grid-cols-3 gap-3">
          <a href="#" class="w-full py-2.5 px-4 flex justify-center items-center bg-gray-800 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors">
            <i class="fab fa-google"></i>
          </a>
          <a href="#" class="w-full py-2.5 px-4 flex justify-center items-center bg-gray-800 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors">
            <i class="fab fa-facebook-f"></i>
          </a>
          <a href="#" class="w-full py-2.5 px-4 flex justify-center items-center bg-gray-800 hover:bg-gray-700 text-white text-sm font-medium rounded-lg transition-colors">
            <i class="fab fa-twitter"></i>
          </a>
        </div>
      </div>
    </div>

    <%# Registration Link %>
    <div class="bg-gray-900 shadow-lg rounded-xl p-6 text-center border border-gray-800">
      <p class="text-gray-300">
        Don't have an account?
        <%= link_to "Sign up", new_registration_path(resource_name), class: "text-teal-400 hover:text-teal-300 font-medium" %>
      </p>
    </div>
    
    <%# App Download Links %>
    <div class="text-center">
      <p class="text-gray-400 text-sm mb-3">Get the app</p>
      <div class="flex justify-center space-x-4">
        <a href="#" class="opacity-80 hover:opacity-100 transition-opacity">
          <img src="https://www.instagram.com/static/images/appstore-install-badges/badge_ios_english-en.png/180ae7a0bcf7.png" alt="Download on App Store" class="h-10">
        </a>
        <a href="#" class="opacity-80 hover:opacity-100 transition-opacity">
          <img src="https://www.instagram.com/static/images/appstore-install-badges/badge_android_english-en.png/e9cd846dc748.png" alt="Get it on Google Play" class="h-10">
        </a>
      </div>
    </div>
  </div>
</div>
